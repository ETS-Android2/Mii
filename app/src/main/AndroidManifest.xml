<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.takundamudarikwa.mii">

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".ui.LoginActivity" android:label="@string/title_activity_login" />
        <activity android:name=".ui.MenuActivity" android:label="@string/title_activity_menu"/>
        <activity android:name=".ui.MindSpaceActivity" android:label="@string/title_activity_mindspace"/>
        <activity android:name=".ui.LoveLanguagesActivity" android:label="@string/title_activity_lovelanguages"/>
        <activity android:name=".ui.SelfActivity" android:label="@string/title_activity_self"/>
        <activity android:name=".ui.MainActivity" android:label="@string/title_activity_mii">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>